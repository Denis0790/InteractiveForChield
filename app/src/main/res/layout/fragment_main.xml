<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".main_screens.MainFragment">

    <Button
        android:id="@+id/btnProfession"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_professions_main"
        android:textColor="@color/btn_color_text"
        android:backgroundTint="@color/btn_background_main"
        app:layout_constraintEnd_toEndOf="@+id/btnAnimal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnAnimal"
        app:layout_constraintTop_toBottomOf="@+id/btnTransport" />

    <Button
        android:id="@+id/btnTransport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_transport_main"
        android:backgroundTint="@color/btn_background_main"
        android:textColor="@color/btn_color_text"
        app:layout_constraintEnd_toEndOf="@+id/btnAnimal"
        app:layout_constraintStart_toStartOf="@+id/btnAnimal"
        app:layout_constraintTop_toBottomOf="@+id/btnAnimal" />

    <Button
        android:id="@+id/btnAnimal"
        android:layout_width="@dimen/btn_width_main"
        android:layout_height="@dimen/btn_height_main"
        android:layout_marginStart="320dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="320dp"
        android:text="@string/btn_animal_main"
        android:backgroundTint="@color/btn_background_main"
        android:textColor="@color/btn_color_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>


